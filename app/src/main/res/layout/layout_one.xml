<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

       <LinearLayout
           android:background="#9e9c9c"
           android:layout_weight="1"
           android:layout_width="match_parent"
           android:layout_height="0dp">
           <android.support.design.widget.TabLayout
               android:id="@+id/tb_one"
               android:layout_weight="9"
               app:tabIndicatorColor="@color/colorAccent"
               app:tabTextColor="@color/colorPrimaryDark"
               app:tabSelectedTextColor="@color/colorPrimary"
               app:tabMode="scrollable"
               android:layout_width="0dp"
               android:layout_height="match_parent"></android.support.design.widget.TabLayout>

           <Button
               android:id="@+id/btn_one"
               android:background="#9e9c9c"
               android:drawableLeft="@drawable/btn_add"
               android:layout_gravity="center"
               android:padding="5dp"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="30dp" />
       </LinearLayout>

       <android.support.v4.view.ViewPager
           android:id="@+id/vp_one"
           android:layout_weight="8"
           android:layout_width="match_parent"
           android:layout_height="0dp"></android.support.v4.view.ViewPager>

</LinearLayout>
